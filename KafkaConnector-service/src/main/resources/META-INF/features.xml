<features xmlns="http://karaf.apache.org/xmlns/features/v1.2.0" name="KafkaConnector-features">
  <feature name="kafka-connector" version="3.0.0" description="Water Kafka Connector microservice integration">
    <!-- Kafka Connector API -->
    <bundle>mvn:it.water.connectors.kafka/KafkaConnector-api/3.0.0</bundle>
    <!-- Kafka Connector Model -->
    <bundle>mvn:it.water.connectors.kafka/KafkaConnector-model/3.0.0</bundle>
    <!-- Kafka Connector Service (OSGi bundle) -->
    <bundle start-level="85">mvn:it.water.connectors.kafka/KafkaConnector-service/3.0.0</bundle>
    <!-- Kafka Client libraries -->
    <bundle>mvn:org.apache.kafka/kafka-clients/3.5.1</bundle>
    <bundle>mvn:io.projectreactor.kafka/reactor-kafka/1.3.19</bundle>
    <!-- Apache HttpComponents for Kafka Connect API -->
    <bundle>mvn:org.apache.httpcomponents/httpclient/4.5.13</bundle>
    <bundle>mvn:org.apache.httpcomponents/httpcore/4.4.15</bundle>
    <bundle>mvn:commons-codec/commons-codec/1.15</bundle>
    <bundle>mvn:commons-logging/commons-logging/1.2</bundle>
  </feature>
</features>
